#!/bin/sh

set -e

case "$1" in
  configure)
    # Add matomo-metrics user
    if ! getent passwd matomo-metrics > /dev/null; then
        adduser --quiet --system --home /var/lib/matomo-metrics --no-create-home \
            --group --gecos "matomo-metrics daemon" matomo-metrics || true
    fi

    chown -R matomo-metrics:matomo-metrics /var/lib/matomo-metrics || true
    chown -R matomo-metrics:matomo-metrics /var/log/matomo-metrics || true
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    :
  ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
